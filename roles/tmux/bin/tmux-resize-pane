#!/usr/bin/env zsh

usage() {
cat << EOS
Usage: tmr <pane> <size>

tmux resize pane.

Params:
pane:  U(UP), D(Down), L(Left), R(Right)
size:  5 - 100

Examples:
tmr U 10
tmr L 50

EOS
# exit 1
}

main() {
  local pane=$1
  local size=$2
  local showUsage=1
  local inputPane=1
  local inputSize=1
  
  [[ $1 =~ "^[U|D|L|R]$" ]] && inputPane=0
  [[ $2 =~ "^([5-9]|[1-9][0-9]|100)$" ]] && inputSize=0
  [[ $inputPane -eq 0 && $inputSize -eq 0 ]] && showUsage=0
  [[ $showUsage -ne 0 ]] && usage

  if [[ $inputPane -eq 1 ]]; then
    printf "pane: "
    read -t 10 pane
    case $pane in
      U|D|L|R) ;;
      ''|*) return 1 ;;
    esac
  fi

  if [[ $inputSize -eq 1 ]]; then
    printf "size: "
    read -t 10 size 
    case $size in
      [5-9]|[1-9][0-9]|100) ;;
      ''|*) return 1 ;;
    esac
  fi

  tmux resize-pane -$pane $size
}

main "$@"

